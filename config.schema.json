{
  "$comment": "Oscilloscope configuration schema for Zelos App UI",
  "type": "object",
  "title": "Oscilloscope Configuration",
  "description": "Configure oscilloscope channels and sampling",
  "properties": {
    "num_channels": {
      "type": "integer",
      "title": "Number of Channels",
      "description": "Number of input channels to acquire",
      "enum": [
        1,
        2,
        4,
        8,
        16
      ],
      "default": 4,
      "ui:widget": "select"
    },
    "sample_rate": {
      "type": "integer",
      "title": "Sample Rate (Hz)",
      "description": "Continuous acquisition sample rate",
      "minimum": 1,
      "maximum": 1000000,
      "default": 1000,
      "ui:help": "For high-rate capture, use the Burst Capture action (up to 1 MHz)"
    },
    "demo_signals": {
      "type": "object",
      "title": "Demo Signal Configuration",
      "description": "Configure simulated signals for each channel",
      "properties": {
        "ch1_frequency": {
          "type": "number",
          "title": "CH1 Frequency (Hz)",
          "default": 1.0,
          "minimum": 0.1,
          "maximum": 1000000
        },
        "ch1_amplitude": {
          "type": "number",
          "title": "CH1 Amplitude (V)",
          "default": 5.0,
          "minimum": 0.0,
          "maximum": 100.0,
          "multipleOf": 0.01,
          "ui:widget": "range"
        },
        "ch2_frequency": {
          "type": "number",
          "title": "CH2 Frequency (Hz)",
          "default": 10.0,
          "minimum": 0.1,
          "maximum": 1000000
        },
        "ch2_amplitude": {
          "type": "number",
          "title": "CH2 Amplitude (V)",
          "default": 3.3,
          "minimum": 0.0,
          "maximum": 100.0,
          "multipleOf": 0.01,
          "ui:widget": "range"
        },
        "ch3_frequency": {
          "type": "number",
          "title": "CH3 Frequency (Hz)",
          "default": 100.0,
          "minimum": 0.1,
          "maximum": 1000000
        },
        "ch3_amplitude": {
          "type": "number",
          "title": "CH3 Amplitude (V)",
          "default": 2.5,
          "minimum": 0.0,
          "maximum": 100.0,
          "multipleOf": 0.01,
          "ui:widget": "range"
        },
        "ch4_frequency": {
          "type": "number",
          "title": "CH4 Frequency (Hz)",
          "default": 1000.0,
          "minimum": 0.1,
          "maximum": 1000000
        },
        "ch4_amplitude": {
          "type": "number",
          "title": "CH4 Amplitude (V)",
          "default": 1.8,
          "minimum": 0.0,
          "maximum": 100.0,
          "multipleOf": 0.01,
          "ui:widget": "range"
        },
        "noise_level": {
          "type": "number",
          "title": "Noise Level (V RMS)",
          "description": "Random noise added to signals",
          "default": 0.05,
          "minimum": 0.0,
          "maximum": 1.0,
          "multipleOf": 0.01,
          "ui:widget": "range"
        }
      }
    }
  },
  "required": [
    "num_channels",
    "sample_rate"
  ]
}
